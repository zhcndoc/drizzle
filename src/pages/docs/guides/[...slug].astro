  }

  @media (max-width: 767px) {
    html.dark .learn__title-block {
      border-left: none;
    }
    .latest-release_title {
      color: #0f172a;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: -0.48px;
      line-height: 31.2px;
      margin-bottom: 16px;
