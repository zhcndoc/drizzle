      padding-bottom: 0.5rem;
      padding-left: 1rem;
      padding-right: 1rem;
      font-weight: 600;
    }
    tbody tr:nth-child(2n) {
      background-color: rgb(243, 244, 246);
    }

    tbody tr td {
      border: 1px solid rgb(209, 213, 219);
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      padding-left: 1rem;
      padding-right: 1rem;
    }

    h1 .autolink-header,
    h4 .autolink-header,
    h5 .autolink-header {
      display: none;
    }

    h2:hover .autolink-header,
    h3:hover .autolink-header {
      opacity: 1;
    }

    .autolink-header {
      opacity: 0;
      transition: opacity 0.1s ease-in-out;
      margin-left: 4px;
      text-decoration: none;
    }

    .autolink-header::after {
      content: "#";
      color: rgba(209, 213, 219, 1);
      padding-left: 0.25rem;
      padding-right: 0.25rem;
    }
  }

  .dark .documentation-content {
    color: rgb(226, 232, 240);
    blockquote {
      color: rgb(156, 163, 175);
      border-left: 2px solid rgb(55, 65, 81);
    }
    code {
      background-color: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    h2 {
      color: #f1f5f9;
      border-bottom: 1px solid rgba(224, 243, 255, 0.1);
    }

    h1,
    h3,
    h4,
    h5,
    h6 {
      color: #f1f5f9;
    }

    thead tr th {
      border: 1px solid rgb(75, 85, 99);
    }
    tbody tr:nth-child(2n) {
      background-color: rgba(75, 85, 99, 0.2);
    }

    tbody tr td {
      border: 1px solid rgb(75, 85, 99);
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  html[class~="dark"] .autolink-header::after {
    color: rgb(64, 64, 64);
  }

  @media screen and (max-width: 768px) {
    .documentation-content {
      h1 {
        font-size: 24px;
      }
    }
  }
</style>
