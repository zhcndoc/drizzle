<style is:global lang="scss">
  .documentation-content {
    color: #334155;
    h1 {
      margin-top: 0.5rem;
      font-size: 32px;
      font-weight: 700;
      letter-spacing: -0.015em;
      color: #0f172a;
    }

    blockquote {
      margin-top: 1.5rem;
      // font-style: italic;
      color: #374151;
      padding-left: 1.5rem;
      border-left: 2px solid #d1d5db;
    }

    p {
      margin-top: 1.5rem;
      line-height: 1.75rem;
    }

    strong {
      font-weight: bolder;
    }

    a {
      text-decoration: inherit;
      outline-offset: 2px;
      outline: 2px solid transparent;
      border-radius: 0.25rem;
      color: #006be6;
      text-decoration-line: underline;
      text-decoration-thickness: from-font;
      text-underline-position: from-font;
    }

    h2 {
      margin-top: 2.5rem;
      padding-bottom: 0.25rem;
      font-size: 1.875rem;
      font-weight: 600;
      letter-spacing: -0.015em;
      color: #0f172a;
      border-bottom: 1px solid rgba(230, 230, 230, 0.7);
    }

    h3 {
      margin-top: 2rem;
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: -0.015em;
    }

    h4 {
      margin-top: 2rem;
      font-size: 1.25rem;
      font-weight: 600;
      letter-spacing: -0.015em;
      color: #0f172a;
    }

    h5 {
      margin-top: 2rem;
      font-size: 1.125rem;
      font-weight: 600;
      letter-spacing: -0.015em;
      color: #0f172a;
    }

    h6 {
      margin-top: 2rem;
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: -0.015em;
      color: #0f172a;
    }

    hr {
      height: 0;
      color: inherit;
      border-top-width: 1px;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    ul {
      margin-left: 1.5rem;
      list-style-type: disc;
      margin-top: 1.5rem;
    }

    ol {
      margin-left: 1.5rem;
      list-style-type: decimal;
      margin-top: 1.5rem;
    }

    li {
      margin-top: 0.5rem;
      margin-bottom: 0.5rem;
    }

    code {
      overflow-wrap: break-word;
      border-radius: 0.375rem;
      border: 1px solid rgba(0, 0, 0, 0.04);
      background-color: rgba(0, 0, 0, 0.03);
      padding-top: 0.125rem;
      padding-bottom: 0.125rem;
      padding-left: 0.25em;
      padding-right: 0.25em;
      font-size: 0.9em;
    }

    table {
      text-indent: 0;
      border-color: inherit;
      border-collapse: collapse;
      margin-top: 1.5rem;
      display: block;
      overflow-x: scroll;
      scrollbar-gutter: stable;
    }

    table::-webkit-scrollbar {
      height: 0.75rem;
      width: 0.75rem;
    }

    table::-webkit-scrollbar-thumb {
      border-radius: 10px;
    }

    table::-webkit-scrollbar-track {
      background-color: transparent;
    }

    iframe {
      width: 100%;
      height: auto;
      aspect-ratio: 16/9;
    }

    @supports (color: lab(0% 0 0)) {
      table {
        scrollbar-color: lab(48.438% 0 0/0.4) transparent;
      }
    }

    @supports (color: color(display-p3 0 0 0)) {
      table {
        scrollbar-color: color(display-p3 0.45095 0.45095 0.45095/.4)
          transparent;
      }
    }
    thead tr {
      border-top: 1px solid rgb(209, 213, 219);
    }
    thead tr {
      border-top: 1px solid rgb(209, 213, 219);
    }
    thead tr th {
      border: 1px solid rgb(209, 213, 219);
