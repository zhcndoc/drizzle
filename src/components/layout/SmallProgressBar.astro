---
const { progress = 0 } = Astro.props;
---
<a class="progress-bar" href="/roadmap">
  <div style="display: flex; gap: 8px; align-items: center">
    <div class="title">v1.0</div>
    <div class="progress-line">
      <div class="progress-line-inner" style=`right: calc(${100-progress}% - 1px)` />
    </div>
    <div class="label">{progress}%</div>
  </div>
</a>
<style>
    .progress-bar {
        cursor: pointer;
        font-family: Monospace;
        display: flex;
        flex-direction: column;
        padding: 8px 12px;
        justify-content: center;
        gap: 4px;
        width: 100%;
        font-size: 12px;
        height: 40px;
        font-weight: 700;
        background: #f6f6f7;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .progress-bar:hover {
        background: #eff0f3;
    }

    html.dark .progress-bar {
        background: #1c1c1c;
    }

    html.dark .progress-bar:hover {
        background: #282828;
    }

    .title {
       display: flex;
        gap: 6px;
        justify-content: space-between;
        align-items: center;
    }

    .label {
        font-family: Monospace;
    }

    .progress-line {
        position: relative;
        width: 100%;
        height: 10px;
        border-radius: 6px;
        background: white;
        border: 1px solid #e8e8e8;
    }

    html.dark .progress-line {
        background: #282828;
        border-color: #111;
    }

    html.dark .progress-bar {
        color: #c8c9ca;
    }

    .progress-line-inner {
        position: absolute;
        border-radius: 6px;
        background: #4bb74b;
        border: 1px solid #3f9e3e;
        top: -1px;
        bottom: -1px;
        left: -1px;
    }

    html.dark .progress-line-inner {
        border-color: #1e4a1d;
    }
</style>

