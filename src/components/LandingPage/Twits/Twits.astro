---
import Twit from "./Twit.astro";
import TwitPlaceholder from "./TwitPlaceholder.astro";
import { Comments } from "./Comments.ts";
---

<div class="wrap">
  <div class="header">开发者们喜欢 Drizzle ORM！</div>
  <div class="grid_scroll">
    <div class="grid_wrapper">
      <div class="grid">
        {
          Comments.map((c) => {
            if (c.name) {
              return c.href ? (
                <a href={c.href} target="_blank" rel="noreferrer nofollow">
                  <Twit twit={c} />
                </a>
              ) : (
                <Twit twit={c} />
              );
            }
            return <TwitPlaceholder />;
          })
        }
      </div>
    </div>
  </div>
</div>
<style>
  .wrap {
    display: flex;
    flex-direction: column;
    gap: 30px;
    margin-top: 160px;
  }

  .header {
    text-align: center;
    font-size: 32px;
    font-weight: 600;
  }

  .grid {
    column-gap: 20px;
    column-fill: initial;
    column-count: 3;
  }

  .top_twits {
    display: none;
  }

  .column {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  @media (max-width: 900px) {
    .header {
      font-size: 20px;
    }
  }

  @media (max-width: 767px) {
    .grid {
      column-count: 2;
    }
  }

  @media (max-width: 599px) {
    .grid_scroll {
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
      overflow-x: auto;
      overflow-y: hidden;
      width: 100vw;
      margin-left: -24px;
    }
    .grid_scroll::-webkit-scrollbar {
      display: none;
    }
    .grid_wrapper {
      width: fit-content;
    }
    .grid {
      column-count: 3;
      width: 100%;
      padding: 0 24px;
      column-gap: 10px;
    }
    .top_twits {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  }
</style>
