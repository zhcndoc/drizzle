---
import Header from "./Header/Header.astro";
import Advantages from "./Advantages/Advantages.astro";
import Supporting from "./Supporting/Supporting.astro";
import Runtimes from "./Supporting/Runtimes";
import Databases from "./Supporting/Databases";
import DrizzleStudio from "./DrizzleStudio/DrizzleStudio.astro";
import Pricing from "./Pricing/Pricing.astro";
import Twits from "./Twits/Twits.astro";
import SponsorsLine from "./SponsorsLine/SponsorsLine.astro";
import Benchmark from "./Benchmark/Benchmark";

const runtimes: string[] = [
  "Cloudflare Workers",
  "Supabase functions",
  "Vercel functions",
  "Deno deploy",
  "Bun",
  "Lagon",
  "Fly.io",
  "ElectronJS",
  "Expo",
  "React Native",
  "Browser",
];
const databases: string[] = [
  "PlanetScale",
  "Neon",
  "Vercel Postgres",
  "Turso",
  "Supabase",
  "Xata",
  "PostgreSQL",
  "MySQL",
  "LiteFS",
  "SQLite",
  "Web SQLite",
];
---
<div class="wrap">
  <Header />
  <Advantages />
  <div id="performance"></div>
  <Benchmark client:load />
  <Supporting
    rowsNum={4}
    imageType="liveontheedge"
    title="在边缘运行"
    description="我们支持所有主要的有服务器和无服务器运行时"
    items={runtimes}
    data={Runtimes}
  />
  <Supporting
    rowsNum={3}
    imageType="connecteverywhere"
    title="连接到任何数据库"
    description="我们支持所有基于特定平台、tcp、http 和 websocket 的驱动程序"
    items={databases}
    data={Databases}
  />
  <DrizzleStudio />
  <SponsorsLine />
  <div id="pricing"></div>
  <Pricing />
  <Twits />
  <div>
    <a
      class="footer"
      href="https://zeabur.com?referralCode=ikxin&utm_source=ikxin"
    >
      <img
        src="https://zeabur.com/deployed-on-zeabur-light.svg"
        alt="Deployed on Zeabur"
      />
    </a>
  </div>
</div>

<style>
  .wrap {
    max-width: 1080px;
    width: 100%;
    margin: 0 auto;
    padding: 20px 20px 32px 20px;
    display: flex;
    flex-direction: column;
    color: #222;
  }

  html[class~="dark"] .wrap {
    color: rgb(226, 232, 240);
  }

  @media (max-width: 599px) {
    .wrap {
      padding: 20px 0 32px 0;
    }
  }

  .footer {
    display: block;
    width: fit-content;
    margin: 20px auto 0;
  }
</style>
<script>
  window.addEventListener("beforeunload", () => {
    localStorage.setItem("sidebar-scroll", "0");
  });
</script>
